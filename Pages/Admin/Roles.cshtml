@page
@model rds_test.Pages.Admin.RolesModel
@{
    ViewData["Title"] = "Roles";
}

<head>
    <link rel="stylesheet" href="../css/site.css">
</head>

<h3>Opprett en rolle</h3>

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Assign" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<h3>Assign User To Role</h3>

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="SelectedUser" class="control-label"></label>
                <select asp-for="SelectedUser" asp-items="Model.UserData" class="form-control">
                    <option></option>
                </select>
                <span asp-validation-for="SelectedUser" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="SelectedRole" class="control-label"></label>
                <select asp-for="SelectedRole" asp-items="Model.RoleData" class="form-control">
                    <option></option>
                </select>
                <span asp-validation-for="SelectedRole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Assign" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/RolesManager/Create">New</a>
    @if (Model.Roles.Any())
    {
        <table class="table">
            @foreach (var role in Model.Roles)
            {
                <tr>
                    <td>@role.Name</td>
                </tr>
            }
        </table>
    }
</div>


@section scripts{
<partial name="_ValidationScriptsPartial" />
}