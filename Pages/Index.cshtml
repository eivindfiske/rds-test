@page
@using rds_test.Models
@model rds_test.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="../css/index.css">


<body>
<div class="container-fluid">
<div class="row">
<div class="col-sm-2 col-md-2 col-lg-2">
    <div class="topnav">
        <div class="search-row">
            <form asp-action="/Index" method="get">
                <input type="text" placeholder="Søk.." name="searchString" value="@Model.currentFilter">
                <button type="submit"><i class="fa fa-search"></i></button>
            </form>
        </div>
    </div>

    <div class="row">
        <h2 class="tekst">Filtrer</h2>
        <div class="dropdown">
            <button class="teambtn" type="button" data-toggle="dropdown">Team
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li><a href="#">Produksjon</a></li>
                <li><a href="#">Teknisk</a></li>
                <li><a href="#">Salg og marked</a></li>
                <li><a href="#">Logistikk</a></li>
                <li><a href="#">Ledergruppe</a></li>
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="dropdown">
            <button class="prosessbtn" type="button" data-toggle="dropdown">Prosess
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li><a href="#">Plan</a></li>
                <li><a href="#">Do</a></li>
                <li><a href="#">Study</a></li>
                <li><a href="#">Act</a></li>
            </ul>
        </div>
    </div>
</div>


<div class="col-sm-10 col-md-10 col-lg-10">
<div class="row align-items-center justify-content-start">
<table class="suggestionTable">
    <thead>
    </thead>
    <tbody>
        @foreach (var item in Model.Suggestion)
        {

        <tr class="suggestionRowIndex" style="cursor: pointer;" onclick="location.href = '/Suggestions/Details?id=@item.case_num'">
            <div class="col-sm-6 col-md-6 col-lg-6">
            <td class="row">
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td class="row">
                <p></p>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            </div>
            <div class="col-sm-4 col-md-4 col-lg-4">
            <td>
                <p>Avdeling</p>
                @Html.DisplayFor(modelItem => item.resdept)
            </td>
            <td>
                <p>Ansvarlig</p>
                @Html.DisplayFor(modelItem => item.responsible)
            </td>
            </div>
            <div class="col-sm-2 col-md-2 col-lg-2">
            <td>
                @Html.DisplayFor(modelItem => item.deadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            </div>
        </tr>    
}
        </tbody>
    </table>
</div>
</div>
</div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

</body>


