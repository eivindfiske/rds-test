@page
@model rds_test.Pages_ApplicationUsers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Rediger ansatt</h1>

<h4>Ansatt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ApplicationUser.emp_num" />
            <div class="form-group">
                <label asp-for="ApplicationUser.name" class="control-label"></label>
                <input asp-for="ApplicationUser.name" class="form-control" />
                <span asp-validation-for="ApplicationUser.name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.PasswordHash" class="control-label"></label>
                <input asp-for="ApplicationUser.PasswordHash" class="form-control" />
                <span asp-validation-for="ApplicationUser.PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.team" class="control-label"></label>
                <select asp-for="ApplicationUser.team" class="form-control" asp-items="ViewBag.team"></select>
                <span asp-validation-for="ApplicationUser.team" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ApplicationUser.admin" /> @Html.DisplayNameFor(model =>
                    model.ApplicationUser.admin)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
